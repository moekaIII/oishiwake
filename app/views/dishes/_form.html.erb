<%= form_with(model: @dish, local: true, url: choose_new_or_edit) do |form| %>
  <% if @dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= @dish.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @dish.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="dish_form">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="dish_form">
    <%= form.label :time %>
    <%= form.text_field :time %>まで
  </div>

  <div class="dish_form">
    <%= form.label :tip %>
    <%= form.text_field :tip %>円〜
  </div>

  <div class="dish_form">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <%= form.submit %>
<% end %>
