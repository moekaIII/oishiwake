<% @dishes.each do |dish| %>
  <ul>
    <li><%= image_tag dish.user.icon.url %><%= link_to dish.user.name, page_path(dish.user_id) %></li>
    <li><h3><%= dish.name %></h3></li>
    <li>地域：<%= dish.transaction_place %></li>
    <li>募集期間：<%= dish.time %>まで</li>
    <li>チップ：<%= dish.tip %>円〜</li>
  </ul>
  <%= link_to '詳細', dish_path(dish.id) %>

<% end %>
