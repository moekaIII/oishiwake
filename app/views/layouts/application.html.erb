<!DOCTYPE html>
<html>
  <head>
    <title>Osusowake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
    <hedder class="header">
      <ul class="header-ul">
        <% if user_signed_in? %>
          <li class="header-li"><%= link_to 'トップ', root_path %></li>
          <li class="header-li"><%= link_to 'ホーム', dishes_path %></li>
          <li class="header-li"><%= link_to '募集', new_dish_path %></li>
          <li class="header-li"><%= link_to "プロフィール", page_path(current_user.id) %></li>
          <li class="header-li"><%= link_to "メッセージ", user_path %></li>
          <li class="header-li"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li class="header-li"><%= link_to 'トップ', root_path %></li>
          <li class="header-li"><%= link_to "新規登録", new_user_registration_path %></li>
          <li class="header-li"><%= link_to "ログイン", new_user_session_path %></li>
        <% end %>
      </ul>
    </hedder>
    <%= yield %>
    <div class="push"></div>
    </div>
    <footer>
      <p>©︎2018 osusowake</p>
    </footer>
  </body>
</html>
